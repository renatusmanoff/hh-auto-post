# Environment Variables
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/hh-finder

# HH.RU OAuth (замените на ваши ключи)
HH_CLIENT_ID=your-hh-client-id
HH_CLIENT_SECRET=your-hh-client-secret
HH_REDIRECT_URI=https://hh-finder.ru/api/auth/hh/callback

# OpenAI (замените на ваш API ключ)
OPENAI_API_KEY=your-openai-api-key

# Email SMTP (замените на ваши настройки)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# OneSignal (замените на ваш App ID)
ONESIGNAL_APP_ID=your-onesignal-app-id

# JWT Secret (сгенерируйте свой)
JWT_SECRET=your-super-secret-jwt-key-here

# Session Secret (сгенерируйте свой)
SESSION_SECRET=your-super-secret-session-key-here

# Telegram Bot (для уведомлений, опционально)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# YooKassa (платежи, опционально)
YOOKASSA_SHOP_ID=your-yookassa-shop-id
YOOKASSA_SECRET_KEY=your-yookassa-secret-key
